<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="20dp"
    tools:context=".StudentAttendanceActivity">

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Theme.AttendanceApp.TextView"
        android:text="Students in "
        android:textSize="25sp"
        android:layout_marginVertical="@dimen/fab_margin"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recStudents"
        android:layout_width="match_parent"
        android:layout_below="@id/text"
        android:layout_above="@id/btnTakeAttendance"
        android:layout_height="wrap_content"/>

    <ImageView
        android:layout_marginHorizontal="@dimen/marginVertical"
        android:id="@+id/imageNothing"
        android:visibility="gone"
        android:layout_height="300dp"
        android:layout_width="match_parent"
        android:layout_centerInParent="true"
        android:background="@drawable/error_404"
        />

    <TextView
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:text="Take Attendance"
        android:paddingVertical="10dp"
        android:paddingHorizontal="15dp"
        android:theme="@style/Theme.AttendanceApp.TextView"
        android:textSize="22sp"
        android:layout_gravity="center"
        android:background="@drawable/item_button"
        android:id="@+id/btnTakeAttendance"
        android:layout_margin="20dp"
        android:layout_height="wrap_content"/>



</RelativeLayout>