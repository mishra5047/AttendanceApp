<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:padding="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_margin="3dp"
    android:elevation="10dp"
    android:background="@drawable/background_button"
    android:layout_height="wrap_content">

    <TextView
        android:layout_centerVertical="true"
        android:id="@+id/textRollNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="25"
        android:textSize="@dimen/slide_title"
        android:textStyle="bold"
        style="@style/Theme.AttendanceApp.TextView" />


    <TextView
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/textRollNo"
        android:layout_centerVertical="true"
        android:id="@+id/textStudent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Student Name"
        android:textSize="@dimen/slide_title"
        android:textStyle="bold"
        style="@style/Theme.AttendanceApp.TextView" />

    <ImageView
        android:layout_centerVertical="true"
        android:id="@+id/editIcon"
        android:layout_width="@dimen/width_action_icon"
        android:layout_height="@dimen/width_action_icon"
        android:layout_marginRight="10dp"
        android:background="@android:drawable/ic_menu_edit"
        android:layout_toLeftOf="@id/deleteIcon"
        />

    <ImageView
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:id="@+id/deleteIcon"
        android:layout_width="@dimen/width_action_icon"
        android:layout_height="@dimen/width_action_icon"
        android:background="@android:drawable/ic_menu_delete"
        android:layout_alignParentRight="true"/>
</RelativeLayout>